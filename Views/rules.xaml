<Window x:Class="CTFproject.rules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTFproject"
        mc:Ignorable="d"
        Title="rules" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background.jpg"/>
        </Grid.Background>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="89" Margin="20,23,0,0" VerticalAlignment="Top" Width="755" Background="#FF0F4780">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="home_bt" Content="Home" Height="44" Width="93" Background="#FFFFFF" Click="home_bt_Click"/>
                    <Button x:Name="rules_bt" Content="Rules" Height="44" Width="93" Margin="10,0,0,0" Background="#FFD700" FontWeight="Bold" Click="rules_bt_Click"/>
                    <Button x:Name="scoreboard_bt" Content="Scoreboard" Height="44" Width="93" Margin="10,0,0,0" Background="#FFFFFF" Click="scoreboard_bt_Click"/>
                    <Button x:Name="challenges_bt" Content="Challenges" Height="44" Width="93" Margin="10,0,0,0" Background="#FFFFFF" Click="challenges_bt_Click"/>
                </StackPanel>
                <Button x:Name="logout_bt" Content="Logout" Height="30" Width="70" Background="Red" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Click="logout_bt_Click"/>
            </Grid>
        </Border>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0" Width="600">
            <TextBlock Text="Competition Rules" FontSize="24" FontWeight="Bold" TextAlignment="Center" Foreground="White" TextWrapping="Wrap"/>
            <Border BorderBrush="White" BorderThickness="1" Margin="10,10,0,0" Padding="10">
                <TextBlock Text="Rule 1: No cheating" FontSize="16" TextAlignment="Center" Foreground="White" TextWrapping="Wrap"/>
            </Border>
            <Border BorderBrush="White" BorderThickness="1" Margin="10,10,0,0" Padding="10">
                <TextBlock Text="Rule 2: Respect all participants" FontSize="16" TextAlignment="Center" Foreground="White" TextWrapping="Wrap"/>
            </Border>
            <Border BorderBrush="White" BorderThickness="1" Margin="10,10,0,0" Padding="10">
                <TextBlock Text="Rule 3: No external help" FontSize="16" TextAlignment="Center" Foreground="White" TextWrapping="Wrap"/>
            </Border>
            <Button x:Name="back_to_home_bt" Content="Back to Home" Height="44" Width="200" Margin="20,20,0,0" HorizontalAlignment="Center" Background="White" Click="home_bt_Click"/>
        </StackPanel>
        <TextBlock Text="© 2025 PHENIKAA INFORMATION SECURITY CLUB. All Rights Reserved." FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Foreground="White"/>
    </Grid>
</Window>