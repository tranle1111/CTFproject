<Window x:Class="CTFproject.dangnhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTFproject"
        mc:Ignorable="d"
        Title="Đăng Nhập" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <ImageBrush ImageSource="/background.jpg" Stretch="Fill"/>
        </Grid.Background>

        <!-- Title -->
        <Label Content="CTF LOGIN" FontSize="40" FontWeight="Bold" Foreground="White"
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- Email Input -->
        <TextBox x:Name="email_text" Height="39" Width="400" Margin="0,100,0,0" 
                 HorizontalAlignment="Center" VerticalAlignment="Top" 
                 Text="Email" FontSize="16" Padding="5"/>

        <!-- Password Input -->
        <PasswordBox x:Name="password_text" Height="39" Width="400" Margin="0,160,0,0"
                     HorizontalAlignment="Center" VerticalAlignment="Top"
                     FontSize="16" Padding="5"/>

        <!-- Login Button -->
        <Button x:Name="login_bt" Content="Đăng nhập" Height="39" Width="400" Margin="0,220,0,0"
                HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18"
                Background="#FFDDDDDD" Foreground="Black" Click="login_bt_Click"/>

        <!-- Forgot Password -->
        <Button x:Name="forgot_bt" Content="Quên mật khẩu?" Height="30" Width="200" Margin="0,270,0,0"
                HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14"
                Background="Transparent" Foreground="White" BorderThickness="0"
                Click="forgot_bt_Click"/>

        <!-- Register Section -->
        <Label Content="Chưa có tài khoản?" FontSize="18" Foreground="White" 
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,320,0,0"/>

        <Button x:Name="register_bt" Content="Đăng ký" Height="39" Width="200" Margin="0,360,0,0"
                HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18"
                Click="register_bt_Click"/>
    </Grid>
</Window>
